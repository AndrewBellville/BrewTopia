<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/list_item_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Large Text"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:focusable="false"
        android:layout_toEndOf="@+id/ColorlinearLayout"
        android:layout_toRightOf="@+id/ColorlinearLayout" />

    <TableRow android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/iconRow"
        android:layout_below="@+id/list_item_string"
        android:minHeight="15dp"
        android:layout_toEndOf="@+id/ColorlinearLayout"
        android:layout_toRightOf="@+id/ColorlinearLayout">

        <ImageView
            android:gravity="right"
            android:id="@+id/favoriteImage"
            android:background="@drawable/favorite_icon"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:visibility="visible"
            android:layout_marginRight="3dp" />

        <ImageView
            android:gravity="right"
            android:id="@+id/scheduledImage"
            android:background="@drawable/scheduled_icon"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:visibility="visible"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"/>

        <ImageView
            android:gravity="right"
            android:id="@+id/onTapImage"
            android:background="@drawable/on_tap_icon"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:visibility="visible"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"/>

    </TableRow>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/list_item_string1"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:focusable="false"
        android:layout_alignLeft="@+id/list_item_string"
        android:layout_alignStart="@+id/list_item_string"
        android:layout_toEndOf="@+id/ColorlinearLayout"
        android:layout_toRightOf="@+id/ColorlinearLayout"
        android:layout_below="@+id/iconRow"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/list_item_string2"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:focusable="false"
        android:maxLines="1"
        android:maxLength="28"
        android:layout_alignLeft="@+id/list_item_string"
        android:layout_alignStart="@+id/list_item_string"
        android:layout_toEndOf="@+id/ColorlinearLayout"
        android:layout_toRightOf="@+id/ColorlinearLayout"
        android:layout_below="@+id/list_item_string1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/list_item_string3"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:focusable="false"
        android:maxLines="1"
        android:maxLength="28"
        android:layout_alignLeft="@+id/list_item_string2"
        android:layout_alignStart="@+id/list_item_string2"
        android:layout_toEndOf="@+id/ColorlinearLayout"
        android:layout_toRightOf="@+id/ColorlinearLayout"
        android:layout_below="@+id/list_item_string2"/>

    <Button
        android:id="@+id/delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_above="@+id/list_item_string2"
        android:layout_alignRight="@+id/iconRow"
        android:layout_alignEnd="@+id/iconRow" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/ColorlinearLayout"
        android:layout_marginRight="5dp"
        />


</RelativeLayout>