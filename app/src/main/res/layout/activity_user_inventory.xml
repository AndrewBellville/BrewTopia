<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Inventory.UserInventory">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search To Add"
        android:id="@+id/addButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/inventoryView"
        android:layout_alignEnd="@+id/inventoryView" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inventoryView"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/addButton">

        <ExpandableListView
            android:id="@+id/inventoryExpandableInventoryList"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>
    </LinearLayout>



</RelativeLayout>
