<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Inventory.UserInventory">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category:"
        android:id="@+id/CategoryLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/categorySpinner"
        android:layout_weight="1"
        android:layout_below="@+id/CategoryLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/categorySearchView"
        android:iconifiedByDefault="false"
        android:queryBackground="@color/ColorToneD1"
        android:layout_below="@+id/categorySpinner"

        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inventoryView"
        android:layout_marginBottom="1dp"
        android:layout_below="@+id/categorySearchView"
        android:layout_marginTop="15dp">

        <ExpandableListView
            android:id="@+id/inventoryExpandableInventoryList"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>


    </LinearLayout>

</RelativeLayout>
