<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Inventory.UserInventory">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HopsView"
        android:layout_marginBottom="1dp">
        <ExpandableListView
            android:id="@+id/inventoryExpandableHopsList"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FermentablesView"
        android:layout_below="@+id/HopsView"
        android:layout_marginBottom="1dp">
        <ExpandableListView
            android:id="@+id/inventoryExpandableFermentablesList"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GrainsView"
        android:layout_below="@+id/FermentablesView"
        android:layout_marginBottom="1dp">
        <ExpandableListView
            android:id="@+id/inventoryExpandableGrainsList"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/YeastView"
        android:layout_below="@+id/GrainsView"
        android:layout_marginBottom="1dp">
        <ExpandableListView
            android:id="@+id/inventoryExpandableYeastList"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EquipmentView"
        android:layout_below="@+id/YeastView"
        android:layout_marginBottom="1dp">
        <ExpandableListView
            android:id="@+id/inventoryExpandableEquipmentList"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>
    </LinearLayout>


</RelativeLayout>
