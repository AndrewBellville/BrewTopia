<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fermentablesName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test"
            android:textSize="17dip"
            android:paddingTop="5dp"
            android:paddingBottom="2dp"
            android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft" />

        <TextView
            android:id="@+id/fermentablesQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qty"
            android:textSize="17dip"
            android:paddingBottom="5dp"
            android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
            android:layout_below="@+id/fermentablesName"/>

        <TextView
            android:id="@+id/fermentablesAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:textSize="17dip"
            android:paddingBottom="5dp"
            android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
            android:layout_below="@+id/fermentablesName"
            android:layout_toRightOf="@+id/fermentablesQty"
            android:layout_toEndOf="@+id/fermentablesQty" />

        <TextView
            android:id="@+id/fermentablesUse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use"
            android:textSize="17dip"
            android:paddingBottom="5dp"
            android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
            android:layout_below="@+id/fermentablesName"
            android:layout_toRightOf="@+id/fermentablesAmount"
            android:layout_toEndOf="@+id/fermentablesAmount"/>

    </RelativeLayout>



</LinearLayout>