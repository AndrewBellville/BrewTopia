<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Brews.UserBrewList">

    <ImageView
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:id="@+id/AddBrewImage"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/BrewList"
        android:src="@drawable/plus_minus_green"/>

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchView"
        android:iconifiedByDefault="false"
        android:layout_alignParentTop="true"
        android:queryBackground="@color/ColorToneD1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Brew Data Available"
        android:id="@+id/GlobalBrewsNoData"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/searchView"/>

    <ListView
        android:id="@+id/BrewList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/searchView">
    </ListView>

</RelativeLayout>
