<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:startColor="@color/ColorToneM1"
                android:centerColor="@color/ColorToneL1"
                android:endColor="@color/ColorToneL1"
                android:angle="90"/>
            <corners android:radius="5dp"/>
            <stroke android:width="2dp" android:color="#001E1111"/>
            <padding android:left="2dp" android:top="2dp" android:bottom="2dp"  android:right="2dp"/>
        </shape>
     </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:startColor="@color/ColorToneM2"
                android:centerColor="@color/ColorToneL1"
                android:endColor="@color/ColorToneL1"
                android:angle="90"/>
            <corners android:radius="5dp"/>
            <stroke android:width="2dp" android:color="#001E1111"/>
            <padding android:left="2dp" android:top="2dp" android:bottom="2dp"  android:right="2dp"/>
        </shape>
    </item>
</selector>

