<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:startColor="#060d13"
                android:centerColor="#4f90c9"
                android:endColor="#244f75"
                android:angle="90"/>
            <corners android:radius="5dp"/>
            <stroke android:width="2dp" android:color="#060d13"/>
            <padding android:left="15dp" android:top="15dp" android:bottom="15dp"  android:right="15dp"/>
        </shape>
     </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:startColor="#0d1a26"
                android:centerColor="#9fbedf"
                android:endColor="#538ac6"
                android:angle="90"/>
            <corners android:radius="5dp"/>
            <stroke android:width="2dp" android:color="#060d13"/>
            <padding android:left="15dp" android:top="15dp" android:bottom="15dp"  android:right="15dp"/>
        </shape>
    </item>
</selector>

