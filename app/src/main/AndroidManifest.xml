<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.town.small.brewtopia">

    <application
        android:allowBackup="true"
        android:icon="@drawable/beer"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:windowSoftInputMode="adjustPan">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Login"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".UserProfile"
            android:label="@string/title_activity_user_profile"></activity>
            android:name=".Timer.TimerPager"
            android:label="@string/title_activity_brew_timer_pager">
        <activity
            android:name=".Calculations.AlcoholByVolume"
            android:icon="@drawable/beer_dark"
            android:label="@string/title_activity_alcohol_by_volume"></activity>
        <activity
            android:name=".Calculations.BrixCalculations"
            android:icon="@drawable/beer_dark"
            android:label="@string/title_activity_brix_calculations"></activity>
        <activity
            android:name=".Calculations.SpecificGravity"
            android:icon="@drawable/beer_dark"
            android:label="@string/title_activity_specific_gravity"></activity>
        <activity
            android:name=".Schedule.AddEditViewSchedule"
            android:icon="@drawable/beer_dark"
            android:label="@string/title_activity_add_edit_view_schedule"></activity>
        <activity android:name=".Brews.UserBrew"></activity>
    </application>

</manifest>